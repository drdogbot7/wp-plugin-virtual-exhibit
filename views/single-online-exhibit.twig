{% extends 'base.twig' %}

{% block content %}

<div
	class="online-exhibit"
	x-data="{
		slideIndex: 0,
		displayIndex: 1,
		slideCount: 1,
		fullScreen: false,
		
		init() {
			
			let slideQuery = new URLSearchParams(location.search).get('slide');
			this.slideIndex = slideQuery ? slideQuery - 1 : 0;
			this.displayIndex = slideQuery ? slideQuery : 1;

			exhibitCarousel = tns({
				container: this.$refs.exhibit,
				nextButton: '#nextButton',
				prevButton: '#prevButton',
				loop: false,
				arrowKeys: true,
				items: 1,
				autoplay: false,
				nav: false,
				autoplayButtonOutput: false,
				startIndex: this.slideIndex,
			});
			
			// set slide count
			this.slideCount = exhibitCarousel.getInfo().slideCount;

			// update current slide on index change

			exhibitCarousel.events.on('indexChanged', () => {

				// update the current slide indicator
				let newDisplayIndex = exhibitCarousel.getInfo().displayIndex;
				this.displayIndex = newDisplayIndex;

				// update URL parameters
				let url = new URL(window.location);
				if ( url.searchParams.get('slide') != newDisplayIndex ) {
					url.searchParams.set('slide', newDisplayIndex );
					history.pushState({}, '', url);
				}	
			});

			addEventListener('popstate', () => {
				let url = new URL(window.location);
				let newIndex = url.searchParams.get('slide') ? url.searchParams.get('slide') - 1 : 0;
				exhibitCarousel.goTo(newIndex);
			});

			// update fullscreen property on fullscreen change
			addEventListener('fullscreenchange', () => {
				if (document.fullscreenElement) {
					this.fullScreen = true;	
				} else {
					this.fullScreen = false;
				}
			});

		},

		toggleFullscreen() {
			if (document.fullscreenElement) {
				document.exitFullscreen().catch((err) => console.error(err))
			} else {
				$refs.exhibitContainer.requestFullscreen().catch((err) => console.error(err))
			}
		}
	}"
	@keydown.f.window="toggleFullscreen"

>
	<div x-ref="exhibitContainer" class="bg-white">
		<div 
			x-show="displayIndex > 1" 
			x-transition 
			x-cloak 
			class="bg-gray-500 gap-x-4 rounded-br-3xl admin-top fixed top-0 left-0 z-20 flex items-center pr-8 text-white"
		>
			<a href="/" data-tippy-content="back to Watkins home page" >
				<img class="w-16 h-auto p-2" src="{{ 'static/watkins-logo-icon-reverse.svg' }}" /></a>
			<h1>
				<button class="font-semibold text-base bg-transparent p-0" @click="exhibitCarousel.goTo('0')">{{ post.title }}</button>
			</h1>
		</div>
		<div x-ref="exhibit">
			<div id="slide-1">
				<div class="bg-gray-700 relative flex w-full h-screen pb-20 overflow-y-auto">
					{% if post.thumbnail.src %}
						<img class="opacity-20 absolute inset-0 object-cover w-full h-full" src="{{ post.thumbnail.src }}" />
					{% endif %}
					<div class="relative z-10 max-w-2xl m-auto text-center text-white">
						<div class="uppercase">Online Exhibit</div>
						<h1 class="font-display text-5xl">
								{{ post.title }}
						</h1>
					</div>
				</div>
			</div>
			{% for slide in post.content|split('<!--nextpage-->') %}
			<div id="{{ 'slide-' ~ (loop.index + 1) }}">
				<div class="flex w-full h-screen px-8 py-20 overflow-y-auto">
					<div class="is-block-content is-layout-flow w-full m-auto">{{ slide }}</div>
				</div>
			</div>
			{% endfor %}
		</div>
		<div class="bg-gray-500 fixed bottom-0 z-10 w-full p-2 text-base text-white">
			<div class="relative flex items-center justify-center">
				<div class="absolute left-0">
					<a class="fill-white flex items-center font-semibold uppercase text-white" href="/online-exhibits" data-tippy-content="Back to online exhibits">
